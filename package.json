{
  "name": "volto-starter-kit",
  "description": "Boilerplate for Volto",
  "license": "MIT",
  "version": "0.0.1-alpha",
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "start:prod": "NODE_ENV=production node build/server.js",
    "i18n": "NODE_ENV=production node node_modules/@plone/plone-react/src/i18n.js"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.js(x)?$": "babel-jest",
      "^.+\\.css$": "jest-css-modules",
      "^.+\\.scss$": "jest-css-modules",
      "^.+\\.(png)$": "jest-file",
      "^.+\\.(svg)$": "./node_modules/@plone/plone-react/jest-svgsystem-transform.js"
    },
    "moduleNameMapper": {
      "@plone/plone-react/(.*)$": "<rootDir>/node_modules/@plone/plone-react/src/$1",
      "~/config": "<rootDir>/src/config"
    },
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "setupFiles": [
      "./node_modules/@plone/plone-react/test-setup.js"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "customizations": {},
  "engines": {
    "node": "~8.11.3"
  },
  "dependencies": {
    "@plone/plone-react": "0.8.3"
  }
}
